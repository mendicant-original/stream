#content
  .left.column
    %h1
      About RMU Flow
    %p 
      Text about RMU Flow

  .right.column
    = image_tag('landing.png')


  .user_preview
    %ul
      - @users.each do |user|
        = gravatar_image_tag(user.email, :alt => user.name)
        %h1
          = link_to user.name, user_path(user)
        %p
          = user.about

