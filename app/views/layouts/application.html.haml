!!! 5
%html
  %head
    %meta{:charset => "UTF-8"}
    %title Flow
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = csrf_meta_tag
  %body
    %header
      = link_to "RbMU Flow", root_path
      %nav
        %ul
          - if signed_in?
            %li= link_to "Post article", new_article_path
      %rss
        %p= link_to "RSS", articles_path(:format => :rss)

    = render_flash_messages

    %section
      = yield

    %footer
      %p RbMU Flow

    = javascript_include_tag :defaults
    = yield :javascript
