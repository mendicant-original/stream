!!! 5
%html
  %head
    %meta{:charset => "UTF-8"}
    %title Stream
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = csrf_meta_tag
  %body
    #container
      %header#header
        %h1= link_to "Stream", root_path

        = link_to "RSS", articles_path(:format => :rss), :id => "rss"
        %nav
          %ul
            %li= link_to "About", about_path
            %li= link_to "Mendicant University", "http://university.rubymendicant.com", :target => "_blank"
            - if signed_in?
              %li= link_to "Post article", new_article_path
              %li= link_to "Sign out", sign_out_path
            - else
              %li= link_to "Sign in with Github", sign_in_path

      = render_flash_messages

      %section#content
        = yield

      %footer#footer
        %p A Mendicant University Project

    = javascript_include_tag :defaults
    = yield :javascript
